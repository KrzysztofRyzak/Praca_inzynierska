                        <a class="nav-link fw-bold text-dark" href="/student/progress">Mój postęp</a>
                    </li>
                <% } %>

                <!-- Opcje dla NAUCZYCIELA -->
                <% if (user && user.role === "teacher") { %>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-dark" href="/teacher">Panel Nauczyciela</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-dark" href="/teacher/my_submissions">Moje zadania</a>
