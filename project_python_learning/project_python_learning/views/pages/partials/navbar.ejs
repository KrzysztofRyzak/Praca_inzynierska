                <% if (user && user.role === "student") { %>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-dark" href="/student">Panel Studenta</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-dark" href="/student/my_submissions">Moje ćwiczenia</a>
