                </div>
            <% } %>

            <!-- Przycisk Wyloguj na wersji mobilnej (pod opcjami menu) -->
            <% if (user && user.email) { %>
                <div class="d-lg-none text-center mt-3">
                    <form action="/logout" method="POST">
                        <button class="btn btn-outline-danger fw-bold">Wyloguj</button>
                    </form>
                </div>
