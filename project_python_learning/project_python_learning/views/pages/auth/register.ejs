<%- include("../partials/head", { title: "Python Learning - Rejestracja" }) %>
<body class="d-flex flex-column min-vh-100">

    <%- include("../partials/navbar", { user }) %>

    <div class="container mt-5">
        <h2 class="text-center fw-bold text-primary">Rejestracja do Python Learning</h2>
        <p class="text-center text-muted">Załóż darmowe konto i rozpocznij naukę Pythona!</p>

        <div class="card mx-auto mt-4 shadow-sm" style="max-width: 500px; border-radius: 10px;">
            <div class="card-body">
                <form action="/register" method="post">

                    <!-- Imię -->
                    <div class="mb-3">
                        <label for="nameControl" class="form-label fw-bold">Imię:</label>
                        <input type="text" id="nameControl" class="form-control" name="name" required>
                    </div>

                    <!-- Nazwisko -->
                    <div class="mb-3">
                        <label for="surnameControl" class="form-label fw-bold">Nazwisko:</label>
                        <input type="text" id="surnameControl" class="form-control" name="surname" required>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="emailControl" class="form-label fw-bold">Adres e-mail:</label>
                        <input type="email" id="emailControl" class="form-control" name="email" required>
                    </div>

                    <!-- Hasło -->
                    <div class="mb-3">
                        <label for="passwordControl" class="form-label fw-bold">Hasło:</label>
                        <input type="password" id="passwordControl" class="form-control" name="password" required>
                    </div>

                    <!-- Zablokowany wybór roli -->
                    <div class="mb-3">
                        <label for="roleControl" class="form-label fw-bold">Rola:</label>
                        <select id="roleControl" class="form-control" name="role" required disabled>
                            <option value="student" selected>Student</option>
                        </select>
                        <input type="hidden" name="role" value="student">
                    </div>

                    <!-- Przycisk rejestracji -->
                    <button type="submit" class="btn btn-primary w-100 fw-bold">Zarejestruj się</button>
                </form>
            </div>
        </div>

        <!-- Link do logowania -->
        <p class="text-center mt-3">
            Masz już konto? <a href="/login" class="fw-bold text-primary">Zaloguj się tutaj</a>
        </p>
    </div>

    <%- include("../partials/footer") %>

</body>
</html>
