<!DOCTYPE html>
<html lang="pl">
<head>
    <%- include("../partials/head", { title: "Edytuj użytkownika" }) %>
</head>
<body>
    <%- include("../partials/navbar", { user }) %>

    <div class="container mt-5">
        <h2 class="text-center fw-bold">Edytuj użytkownika</h2>
        <p class="text-muted text-center">Zmień dane użytkownika i zapisz zmiany.</p>

        <div class="card mx-auto mt-4 shadow-sm" style="max-width: 700px;">
            <div class="card-body">
                <form action="/admin/users/edit/<%= userToEdit.id %>" method="post" class="needs-validation" novalidate>

                    <!-- Imię -->
                    <div class="mb-3">
                        <label for="nameControl" class="form-label fw-bold">Imię:</label>
                        <input type="text" id="nameControl" class="form-control" name="name" value="<%= userToEdit.name %>" required>
                        <div class="invalid-feedback">Podaj imię.</div>
                    </div>

                    <!-- Nazwisko -->
                    <div class="mb-3">
                        <label for="surnameControl" class="form-label fw-bold">Nazwisko:</label>
                        <input type="text" id="surnameControl" class="form-control" name="surname" value="<%= userToEdit.surname %>" required>
                        <div class="invalid-feedback">Podaj nazwisko.</div>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="emailControl" class="form-label fw-bold">Email:</label>
                        <input type="email" id="emailControl" class="form-control" name="email" value="<%= userToEdit.email %>" required>
                        <div class="invalid-feedback">Podaj poprawny adres email.</div>
                    </div>

                    <!-- Rola -->
                    <div class="mb-3">
                        <label for="roleControl" class="form-label fw-bold">Rola:</label>
                        <select id="roleControl" class="form-select" name="role" required>
                            <option value="student" <%= userToEdit.role === "student" ? "selected" : "" %>>Student</option>
                            <option value="teacher" <%= userToEdit.role === "teacher" ? "selected" : "" %>>Nauczyciel</option>
                            <option value="admin" <%= userToEdit.role === "admin" ? "selected" : "" %>>Administrator</option>
                        </select>
                        <div class="invalid-feedback">Wybierz rolę użytkownika.</div>
                    </div>

                    <!-- Przycisk zapisu -->
                    <button type="submit" class="btn btn-primary w-100 fw-bold">Zapisz zmiany</button>
                </form>
            </div>
        </div>

        <!-- Powrót -->
        <div class="text-center mt-3">
            <a href="/admin/users" class="btn btn-secondary fw-bold">Wróć do użytkowników</a>
        </div>
    </div>

    <%- include("../partials/footer") %>

    <!-- Walidacja formularza -->
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>

</body>
</html>
